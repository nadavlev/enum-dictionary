{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "removeComments": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "types": [
            "mc-global",
            "node",
            "webpack-env",
            "angular",
            "angular-material",
            "angular-idle",
            "jquery",
            "promise.prototype.finally"
        ],
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "manual-types"],
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "paths": {
            <%- params.typeScriptPaths %>
        }
    },
    "exclude": ["node_modules", "tmp"]
}
